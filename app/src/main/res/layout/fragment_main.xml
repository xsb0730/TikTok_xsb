<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.MainFragment">

    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/viewPager"
        android:layout_marginTop="78dp"
        android:layout_marginBottom="48dp"/>

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_list"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/iv_list"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"/>


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabTitle"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:tabIndicatorColor="@color/white"
            app:tabTextColor="#999999"
            app:tabSelectedTextColor="@color/black"
            app:tabSelectedTextAppearance="@style/TabTextStyle"
            app:tabIndicatorGravity="bottom"
            app:tabPadding="0dp"
            app:tabPaddingEnd="0dp"
            app:tabMode="fixed"
            app:tabGravity="fill"
            app:tabMaxWidth="0dp"
            />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/iv_search"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/tabMainMenu"
            android:background="@color/black"
            app:tabTextColor="#999999"
            app:tabSelectedTextColor="@color/white"
            app:tabSelectedTextAppearance="@style/TabSelectedText"
            app:tabTextAppearance="@style/TabNormalText"
            app:tabIndicatorColor="@color/transparent"/>  <!-- 隐藏底部指示器 -->

        <ImageView
            android:layout_width="50dp"
            android:layout_height="35dp"
            android:background="@mipmap/ic_main_menu"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
</RelativeLayout>