<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_bg_theme</item>
        <item name="colorPrimaryDark">@color/color_bg_theme</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Launch_Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="background">@color/color_bg_theme</item>
    </style>



    <style name="basedialog_style" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:backgroundDimAmount">0.6</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- 定义上Tab的文字样式：18sp+加粗 -->
    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <!-- 文字大小 -->
        <item name="android:textSize">18sp</item>
        <!-- 文字加粗 -->
        <item name="android:textStyle">bold</item>
        <!-- 取消默认全大写 -->
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- 未选中下Tab的文字样式：15sp+加粗 -->
    <style name="TabNormalText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- 选中下Tab的文字样式：16sp+加粗 -->
    <style name="TabSelectedText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- BottomSheetDialog 主题 -->
    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <!-- 指定 BottomSheet 的样式 -->
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <!-- 背景遮罩层透明度 -->
        <item name="android:backgroundDimAmount">0.5</item>
        <!-- 点击外部是否可关闭 -->
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <!-- BottomSheet 样式 -->
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <!-- 背景设为透明 -->
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>